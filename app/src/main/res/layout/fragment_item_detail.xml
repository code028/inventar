            android:layout_height="wrap_content"
            android:text="Приказ ставке инвентара"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#90CAF9"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"/>

